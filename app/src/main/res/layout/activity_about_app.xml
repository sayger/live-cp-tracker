<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.AboutAppActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/profile_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_back_btn" />

                <TextView
                    android:id="@+id/dp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="@string/about_app"
                    android:textColor="#008DB9"
                    android:textSize="28sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:src="@drawable/ic_about_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live_cp_tracker"
                android:textSize="28sp"
                android:fontFamily="@font/google_sans_medium"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live_competitive_programming_tracker_is_a_simpler_and_mobile_version_of_clist_by_that_helps_you_remain_updated_with_latest_ongoing_and_upcoming_programming_contests"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:fontFamily="@font/google_sans_regular"
                android:textColor="#313131"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Designed &amp; Developed by \nAditya \n(Core Team Member, DSC KIET)"
                android:paddingRight="16dp"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:fontFamily="@font/google_sans_regular"
                android:textColor="#313131"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </ScrollView>
</layout>